@model IEnumerable<LoginRegistrationInMVCWithDatabase1.Models.RegisterUser>
@{ ViewBag.Title = "Details"; }
@using GridMvc.Html


<center>
    <h2>Employee Details</h2>
</center>

<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")"></script>
<script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>

<div class="code-cut">
    @Html.Grid(Model).Columns(columns =>
{
    columns.Add(c => c.FirstName).Titled("FirstName").Filterable(true);
    columns.Add(c => c.LastName).Titled("LastName").Filterable(true);
    columns.Add(c => c.Email).Titled("Email").Filterable(true);
    columns.Add()
.Encoded(false)
.Sanitized(false)
.SetWidth(30)
.RenderValueAs(o => Html.ActionLink  ("Edit", "Edit", new { FirstName = o.FirstName }));

}).WithPaging(10).Sortable(true)
</div>
